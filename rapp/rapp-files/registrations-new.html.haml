%h1 
  %a= link_to image_tag("logo.png", :alt => "Logo")+"#{title}" , root_url
.block#block-signup
  %h2 Sign up
  .content
    - devise_error_messages!
    .flash
      - flash.each do |type, message|
        %div{ :class => "message #{type}" }
          %p= message.html_safe
    = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html=> {:class => "form"}) do |f|
      .group.wat-cf
        .left=  f.label :email, :class => "label right"
        .right
          = f.email_field :email, :class => "text_field"
          %span.description Email address for account confirmation
      .group.wat-cf
        .left=  f.label :password, :class => "label right"
        .right
          = f.password_field :password, :class => "text_field"
          %span.description Password must be at least 6 characters
      .group.wat-cf
        .left=  f.label :password_confirmation, :class => "label right"
        .right
          = f.password_field :password_confirmation, :class => "text_field"
          %span.description Retype password for confrmation
      .group.navform.wat-cf 
        .right
          %button.button{ :type => "submit" }
            = image_tag "web-app-theme/icons/tick.png"
            Signup 
    = render :partial => "devise/shared/links"
