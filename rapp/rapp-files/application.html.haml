!!!
%html
  %head
    %title #{title}
    = stylesheet_link_tag "web-app-theme/base", "web-app-theme/themes/djime-cerulean/style", "web-app-theme/override", :cache => true
    = javascript_include_tag :defaults, :cache => true
    = csrf_meta_tag
  %body
    #container
      #header
        %h1
          %a= link_to image_tag("logo.png", :alt => "Logo")+"#{title}" , root_url
        #user-navigation
          %ul.wat-cf
            %li= link_to "About", about_path
            %li= link_to "Help",  pages_help_path
            %li= link_to "Contact", pages_contact_path
            -if user_signed_in?
              %li= link_to "Logout", destroy_user_session_path
        #main-navigation
          %ul.wat-cf
            %li{:class=> ["first", root_path == request.env['PATH_INFO'] ? "active":""]}= link_to "Home", root_path
            -if user_signed_in?
              -# Add your own app specific links here
            -else
              %li{:class=> [ new_user_registration_path == request.env['PATH_INFO'] ? "active":""]}= link_to "Sign up", new_user_registration_path
              %li{:class=> [ new_user_session_path == request.env['PATH_INFO'] ? "active":""]}= link_to "Sign in", new_user_session_path
      #wrapper.wat-cf
        .flash
          - flash.each do |type, message|
            %div{:class => "message #{type}"}
              %p= message
        #main
          = yield
          #footer
            .block
              %p
                Copyright &copy; #{Time.now.year} #{title}.
        #sidebar
          = yield :sidebar
