%h1 
  %a= link_to image_tag("logo.png", :alt => "Logo")+"#{title}" , root_url
.block#block-login
  %h2 Forgot your password?
  .content.login
    -devise_error_messages!
    .flash
      - flash.each do |type, message|
        %div{ :class => "message #{type}" }
          %p= message.html_safe
    = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => "form" }) do |f|
      .group.wat-cf
        .left= f.label :email, :class => "label right"
        .right= f.email_field :email, :class => "text_field"
      .group.navform.wat-cf
        %button.button{ :type => "submit" }
          = image_tag "web-app-theme/icons/tick.png"
          Send me reset password instructions
    = render :partial => "devise/shared/links"
